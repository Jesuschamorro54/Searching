<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_blue"
        android:gravity="center"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/robotomedium"
            android:padding="32dp"
            android:text="CREAR CUENTA"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="33sp"
            app:drawableLeftCompat="@drawable/adduser" />

        <LinearLayout
            android:layout_width="367dp"
            android:layout_height="489dp"
            android:background="@drawable/box_container"
            android:gravity="center"
            android:orientation="vertical"


            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotomedium"
                android:paddingStart="30dp"
                android:paddingBottom="9dp"
                android:text="Nombre"
                android:textAlignment="viewStart"
                android:textColor="#959595"
                android:textSize="16sp"
                tools:ignore="RtlSymmetry" />

            <EditText
                android:id="@+id/name"
                android:layout_width="316dp"
                android:layout_height="50dp"
                android:background="@drawable/custom_edittetext"
                android:hint="Valeria Ramos Florez"
                android:textColor="@color/black"
                android:textColorHint="#BFBBBB" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotomedium"
                android:paddingStart="30dp"
                android:paddingBottom="9dp"
                android:text="Correo"
                android:layout_marginTop="15dp"
                android:textAlignment="viewStart"
                android:textColor="#959595"
                android:textSize="16sp"
                tools:ignore="RtlSymmetry" />

            <EditText
                android:id="@+id/email_sing"
                android:layout_width="316dp"
                android:layout_height="50dp"
                android:background="@drawable/custom_edittetext"
                android:hint="ramosflorezv@gmail.com"
                android:padding="15dp"
                android:textColor="@color/black"
                android:textColorHint="#BFBBBB" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotomedium"
                android:paddingStart="30dp"
                android:layout_marginTop="15dp"
                android:text="Contraseña"
                android:textAlignment="viewStart"
                android:textColor="#959595"
                android:textSize="16sp"
                tools:ignore="RtlSymmetry" />

            <EditText
                android:id="@+id/password_sing"
                android:layout_width="316dp"
                android:layout_height="50dp"
                android:layout_marginTop="9dp"
                android:background="@drawable/custom_edittetext"
                android:hint="**********"
                android:padding="15dp"
                android:password="true"
                android:textColor="@color/black"
                android:textColorHint="#BFBBBB" />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotomedium"
                android:paddingStart="30dp"
                android:layout_marginTop="15dp"
                android:text="Confirmar contraseña"
                android:textAlignment="viewStart"
                android:textColor="#959595"
                android:textSize="16sp"
                tools:ignore="RtlSymmetry" />

            <EditText
                android:id="@+id/password_sing_confirm"
                android:layout_width="316dp"
                android:layout_height="50dp"
                android:layout_marginTop="9dp"
                android:background="@drawable/custom_edittetext"
                android:hint="**********"
                android:padding="15dp"
                android:password="true"
                android:textColor="@color/black"
                android:textColorHint="#BFBBBB" />

            <Button
                android:id="@+id/button_login"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="181dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="29dp"
                android:background="@drawable/button"
                android:fontFamily="@font/robotomedium"
                android:onClick="sendMessage"
                android:text="REGISTRAR"
                android:textColor="@color/white"
                android:textSize="17dp"
                tools:ignore="UsingOnClickInXml" />


        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>