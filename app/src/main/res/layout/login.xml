<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_blue"
        android:gravity="center"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/robotomedium"
            android:padding="32dp"
            android:text="@string/iniciar_sesi_n"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="33sp"
            app:drawableLeftCompat="@drawable/usericono" />

        <LinearLayout
            android:layout_width="367dp"
            android:layout_height="396dp"
            android:background="@drawable/box_container"
            android:gravity="center"
            android:orientation="vertical"


            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotomedium"
                android:paddingStart="30dp"
                android:paddingBottom="9dp"
                android:text="@string/usuario"
                android:textAlignment="viewStart"
                android:textColor="#959595"
                android:textSize="16sp"


                tools:ignore="RtlSymmetry" />

            <EditText
                android:id="@+id/user"
                android:layout_width="316dp"
                android:layout_height="50dp"
                android:background="@drawable/custom_edittetext"
                android:hint="ramosflorezv@gmail.com"
                android:padding="15dp"
                android:textColor="@color/black"
                android:textColorHint="#BFBBBB" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotomedium"
                android:paddingStart="30dp"
                android:paddingTop="20dp"
                android:text="Contraseña"
                android:textAlignment="viewStart"
                android:textColor="#959595"
                android:textSize="16sp"


                tools:ignore="RtlSymmetry" />

            <EditText
                android:id="@+id/password"
                android:layout_width="316dp"
                android:layout_height="50dp"
                android:layout_marginTop="9dp"
                android:background="@drawable/custom_edittetext"
                android:hint="**********"
                android:padding="15dp"
                android:password="true"
                android:textColor="@color/black"
                android:textColorHint="#BFBBBB" />

            <Button
                android:id="@+id/button_login"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="181dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="29dp"
                android:background="@drawable/button"
                android:fontFamily="@font/robotomedium"
                android:onClick="sendMessage"
                android:text="ACCEDER"
                android:textColor="@color/white"
                tools:ignore="UsingOnClickInXml"
                android:textSize="17dp"/>
            <TextView
                android:id="@+id/forgot_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¿Olvidó su contraseña?"
                android:textColor="@color/gris_preferente"
                android:textStyle="bold"
                android:layout_marginTop="18dp"
                android:clickable="true"
                android:focusable="true"
                android:textSize="17dp"/>

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>